{
  "compilerOptions": {
    /* ------------ Core Setup ------------ */
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* ------------ Module System ------------ */
    "module": "commonjs",
    "moduleResolution": "node",

    /* ------------ Paths / Aliases ------------ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ------------ Quality Settings ------------ */
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,

    /* ------------ Emits ------------ */
    "noEmit": false,
    "outDir": "dist",

    /* ------------ Misc ------------ */
    "incremental": true
  },

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },

  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}
